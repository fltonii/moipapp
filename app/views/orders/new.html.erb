

<%= form_tag orders_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>


    <h3>
      <%= tag.label 'Valor' %><br>
      <%= tag.input type: 'text', name: 'order[amout]',
          value: '30', size: 8, id: :amount %>
    </h3>

    <p>
      <%= tag.button type: :submit do %>
        Confirma
      <% end %>
    </p>
  </article>

<% end %>
